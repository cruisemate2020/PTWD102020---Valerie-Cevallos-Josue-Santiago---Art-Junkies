<h2>Login</h2>

<form action="/login" method="POST">

    <label> Username:
        <input type="username" name="username">
    </label>
    <label> Password:
        <input type="password" name="password">
    </label>

    <button type="submit">Login</button>

    <br />
    {{#if errorMessage}}
        {{errorMessage}}
    {{/if}}

</form>